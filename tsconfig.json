{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@data/*": ["src/data/*"],
            "@images/*": ["src/images/*"],
            "@layouts/*": ["src/layouts/*"],
            "@styles/*": ["src/styles/*"]
        }
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"]
}

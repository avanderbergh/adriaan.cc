---
import BaseHead from "@components/BaseHead.astro";
import "@styles/global.css";

const bg = "#eeeeee";
const fg = "#444444";
const marginSize = "22px";

const { title, description } = Astro.props;
---

<html lang="en">
    <BaseHead title={title} description={description} />
    <style define:vars={{ bg, fg, marginSize }}>
        body {
            height: calc(100vh - var(--marginSize));
            background: var(--bg);
            color: var(--fg);
        }

        .container {
            display: grid;
            justify-items: center;
        }
    </style>

    <body>
        <div class="container">
            <slot />
        </div>
    </body>
</html>
